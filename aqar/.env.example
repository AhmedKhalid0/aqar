# =============================================================================
# NewCity Platform - Environment Variables
# =============================================================================
# Copy this file to .env and configure for your environment

# ==================== SERVER ====================
NODE_ENV=development
PORT=3000
SITE_URL=http://localhost:3000

# ==================== SECURITY ====================
# CRITICAL: Generate a secure JWT_SECRET for production
# Use: npm run generate:jwt
# or: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=

# Optional: Refresh token secret (defaults to JWT_SECRET + '_refresh')
JWT_REFRESH_SECRET=

# Token expiry settings
JWT_ACCESS_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# ==================== CORS ====================
# Comma-separated list of allowed origins (leave empty for *)
# Example: https://newcitydevelopment.net,https://www.newcitydevelopment.net
ALLOWED_ORIGINS=

# ==================== REDIS ====================
# Redis URL for distributed caching (recommended for production)
# If not set, in-memory cache will be used
REDIS_URL=redis://localhost:6379

# ==================== LOGGING ====================
# Set to 'debug' for more verbose logging
LOG_LEVEL=info
